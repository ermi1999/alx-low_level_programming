CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	-$(RM) $(NAME) *.o *~ \#*\#

oclean:
	-$(RM) *.o

fclean: clean oclean

re: fclean all

-include m.h
